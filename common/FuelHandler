package ZFuelCraftMod.common;

import net.minecraft.item.ItemStack;
import cpw.mods.fml.common.IFuelHandler;

public class FuelHandler implements IFuelHandler{

  @Override
	public int getBurnTime(ItemStack fuel) {
		if(fuel.itemID == ZFuelCraftMod.lignite.itemID){
			return 3200;
			
		}else if(fuel.itemID == ZFuelCraftMod.bituminous.itemID){
			return 6400;
			}else if(fuel.itemID == ZFuelCraftMod.anthracite.itemID){
				return 12800;
	}
		return 0;
}
}
			
	
		

	
		

